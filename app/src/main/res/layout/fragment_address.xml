<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.handcraftedcreator.handcraftedcreator.ui.AddressFragment">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:id="@+id/address_text"
       android:text="Enter Your Shipping Info. \nWe will use this info for shipping labels.\n This will not be visible to customers"
       android:gravity="center"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_phone"
        android:hint="Phone"
        android:inputType="phone"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_line1"
        android:hint="Address Line 1"
        android:inputType="textCapWords"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_line2"
        android:hint="Address Line 2"
        android:inputType="textCapWords"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address_line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_city"
        android:hint="City"
        android:inputType="textCapWords"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address_line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_state"
        android:hint="State"
        android:inputType="textCapWords"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/address_zip"
        android:hint="Zip"
        android:inputType="number"
        android:gravity="center"
        android:background="@drawable/et_background"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


 <Button
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:id="@+id/address_next_btn"
     android:text="Next"
     android:background="@drawable/et_background"
     android:layout_marginBottom="16dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     />


</androidx.constraintlayout.widget.ConstraintLayout>