<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.handcraftedcreator.handcraftedcreator.ui.StripeSetupFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/stripe_setup_btn"
        android:text="Set Up Stripe"
        android:background="@drawable/et_background"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stripe_text"
        android:text="@string/stripe_info"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stripe_onboarding_webview"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>